generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Keluarga {
  id       Int    @id @default(autoincrement())
  no_induk String @unique

  no_kk   String? @unique @db.VarChar(16)
  no_nik  String? @unique @db.VarChar(16)
  address String?

  is_registered Boolean @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  AnggotaKeluarga AnggotaKeluarga[]

  @@index([no_induk])
}

model AnggotaKeluarga {
  id Int @id @default(autoincrement())

  name         String
  gender       Gender
  phone_number String

  is_alive   Boolean
  birth_date DateTime?
  death_date DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  keluarga           Keluarga @relation(fields: [keluarga_id], references: [id], onDelete: Cascade)
  keluarga_id        Int
  is_kepala_keluarga Boolean  @default(false)

  @@index([name])
}

enum Gender {
  MALE
  FEMALE
}
